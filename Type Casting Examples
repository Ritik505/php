<body>

    <div class="container">
        <h1>Type Casting Variables</h1>

        <?php
        $testCases = [
            [
                'title' => 'Example 1: Integer to String',
                'initial_value' => 5,
                'cast_to' => 'string'
            ],
            [
                'title' => 'Example 2: String to Integer',
                'initial_value' => "Hello Abhishek",
                'cast_to' => 'int'
            ],
            [
                'title' => 'Example 3: Array to Float',
                'initial_value' => ["Red", "Green", "Blue"],
                'cast_to' => 'float'
            ],
            [
                'title' => 'Example 4: Float to Boolean',
                'initial_value' => 9.8,
                'cast_to' => 'bool'
            ],
        ];

        foreach ($testCases as $test) {
            $initialValue = $test['initial_value'];
            $castType = $test['cast_to'];
            
            ob_start();
            var_dump($initialValue);
            $initialVarDump = ob_get_clean();

            settype($initialValue, $castType);
            $castedValue = $initialValue;

            ob_start();
            var_dump($castedValue);
            $castedVarDump = ob_get_clean();
        ?>
        
            <div class="example">
                <h2><?php echo htmlspecialchars($test['title']); ?></h2>
                <p>
                    <strong>Initial Value:</strong><br>
                    <pre><code><?php echo htmlspecialchars($initialVarDump); ?></code></pre>
                </p>
                <p>
                    <strong>After casting to (<?php echo $castType; ?>):</strong><br>
                    <pre><code><?php echo htmlspecialchars($castedVarDump); ?></code></pre>
                </p>
            </div>

        <?php
        }
        ?>

    </div>

</body>
</html>
